<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<root>
<!--
Do all objective before load scene:
  * Set "Camera" position and orientation
  * all scene requirements "Imports" (math "glm" and Engine in top priority)
Load scene in "Map" tag. That do it add this xml element in "elements" arg
Micro code tag with name "code" that do load easy
-->

    <!-- sav requirements -->
    <TPT>
        <Camera>
            <position>glm.vec3(-7, 7, -7)</position>
            <yaw>45</yaw>
            <pitch>-10</pitch>
        </Camera>

        <Include>
            <Loads>
                <vbos>
                    <WoodenWatchTower> CustomVBO_name['WoodenWatchTower'] = ('2f 3f 3f', ['in_texcoord_0', 'in_normal', 'in_position'], f'{config.__APPLICATION_FOLDER__}/{MODEL_path}/WoodenWatchTower', 'obj', 'jpg' )</WoodenWatchTower>
                    <cat>CustomVBO_name['cat'] = ('2f 3f 3f', ['in_texcoord_0', 'in_normal', 'in_position'], rf'{config.__APPLICATION_FOLDER__}/{MODEL_path}/cat', 'obj', 'jpg' )</cat>
                    <earth>CustomVBO_name['earth'] = ('2f 3f 3f', ['in_texcoord_0', 'in_normal', 'in_position'], rf'{config.__APPLICATION_FOLDER__}/{MODEL_path}/earth', 'obj', 'png' )</earth>
                </vbos>
                <textures>
                    <box1>CustomTexture_name['box1'] = rf'{config.__APPLICATION_FOLDER__}/QuantumCore/data/textures/box1.jpg'</box1>
                    <wall1>CustomTexture_name['wall1'] = rf'{config.__APPLICATION_FOLDER__}/QuantumCore/data/textures/wall1.jpg'</wall1>
                </textures>
            </Loads>
            <!-- Custom imports -->
            <Imports>
                <main1>import glm</main1>
                <main2>import QuantumCore</main2>
                <dep1>from gamedata.settings import MODEL_path</dep1>
                <i1>from core.elements.entities import Cat, Cube, MovingCube, WoodenWatchTower, Earth</i1>
            </Imports>
            <list>(Cat, Cube, MovingCube, WoodenWatchTower, Earth)</list>
        </Include>
    </TPT>

    <!-- Main Map -->
    <Save>
        <Objects>
            <e1>add(MovingCube(app, pos=(15, 10, 15), tex_id='test1', scale=(5, 5, 5)))</e1>
            <e2>add(WoodenWatchTower(app, scale=[3, 3, 3], pos=[60, 0, 30]))</e2>
            <e3>add(Earth(app, scale=[2, 2, 2], pos=[30, 10, 60]))</e3>
            <e4>add(Cat(app, pos=(7, 0, 44), rot=(0, 0, 125)))</e4>
            <e5>add(MovingCube(app, pos=(44, 10, 44), tex_id='empty', scale=(5, 5, 5)))</e5>
        </Objects>
        <Lights>
            <l0>Light(pos=(25, 25, 25), ambient=.2, diffuse=1.5, specular=.5)</l0>
            <l1>Light(size=15)</l1>
        </Lights>
    </Save>

    <!-- Дополнительный код для оптимизации загрузок в ручную созданных файлов -->
    <code>
        <c1>for i in range(40):
                for j in range(40):
                    add(Cube(app, pos=(i*2, 0, j*2), tex_id='wall1'))</c1>
        <c2>None</c2>
    </code>
</root>